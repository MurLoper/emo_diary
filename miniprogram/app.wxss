/* app.wxss - 全局样式 */

page {
  height: 100%;
  background-color: var(--theme-background, #F5F5F5);
  color: var(--theme-text-primary, #333333);
}

/* 通用容器 */
.container {
  padding: 16px;
  box-sizing: border-box;
}

/* 卡片样式 */
.card {
  background: #FFFFFF;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

/* 按钮样式 */
.btn {
  border-radius: 24px;
  padding: 12px 24px;
  font-size: 14px;
  font-weight: 500;
  border: none;
}

.btn-primary {
  background-color: var(--theme-primary, #FFB6C1);
  color: #FFFFFF;
}

.btn-secondary {
  background-color: #F0F0F0;
  color: #666666;
}

/* 输入框 */
.input {
  background-color: #F8F8F8;
  border-radius: 8px;
  padding: 12px;
  font-size: 14px;
  border: 1px solid #E0E0E0;
}

/* 标签 */
.tag {
  display: inline-block;
  padding: 4px 12px;
  border-radius: 16px;
  font-size: 12px;
  margin-right: 8px;
  margin-bottom: 8px;
}

/* 分割线 */
.divider {
  height: 1px;
  background-color: #E0E0E0;
  margin: 16px 0;
}

/* Flex布局 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  justify-content: center;
  align-items: center;
}

.flex-between {
  justify-content: space-between;
  align-items: center;
}

.flex-wrap {
  flex-wrap: wrap;
}

/* 文本 */
.text-primary {
  color: var(--theme-text-primary, #333333);
}

.text-secondary {
  color: var(--theme-text-secondary, #999999);
}

.text-center {
  text-align: center;
}

/* 间距 */
.mt-8 { margin-top: 8px; }
.mt-16 { margin-top: 16px; }
.mt-24 { margin-top: 24px; }

.mb-8 { margin-bottom: 8px; }
.mb-16 { margin-bottom: 16px; }
.mb-24 { margin-bottom: 24px; }

.p-8 { padding: 8px; }
.p-16 { padding: 16px; }
.p-24 { padding: 24px; }

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40px 0;
  color: #999999;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 60px 20px;
}

.empty-icon {
  width: 120px;
  height: 120px;
  margin: 0 auto 16px;
  opacity: 0.5;
}

.empty-text {
  color: #999999;
  font-size: 14px;
}
