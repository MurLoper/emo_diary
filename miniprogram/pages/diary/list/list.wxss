/* pages/diary/list/list.wxss */

.container {
  min-height: 100vh;
  padding-top: 380rpx;
  padding-bottom: 32rpx;
}

/* ========== 固定头部 ========== */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  padding: 44rpx 32rpx 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  letter-spacing: 1rpx;
}

/* 搜索框 */
.search-box {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  border-radius: 24rpx;
  margin-bottom: 32rpx;
}

.search-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
}

.clear-icon {
  font-size: 40rpx;
  padding: 0 16rpx;
}

/* 标签筛选 */
.tag-filter {
  white-space: nowrap;
  padding-bottom: 16rpx;
}

.tag-item {
  display: inline-block;
  padding: 16rpx 32rpx;
  border-radius: 48rpx;
  margin-right: 16rpx;
  font-size: 28rpx;
  transition: all 0.2s;
}

/* 日记列表 */
.diary-list {
  padding: 48rpx 32rpx;
}

.diary-card {
  margin-bottom: 32rpx;
  transition: transform 0.2s;
}

.diary-card:active {
  transform: scale(0.98);
}

.diary-card-inner {
  padding: 40rpx;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

/* 日记头部 */
.diary-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.diary-date {
  font-size: 24rpx;
}

.diary-tags-preview {
  display: flex;
  gap: 12rpx;
}

.tag-preview {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

/* 日记内容 */
.diary-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.diary-content {
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

/* 图片网格 */
.image-grid {
  display: grid;
  gap: 16rpx;
  margin-top: 24rpx;
}

.grid-1 {
  grid-template-columns: 1fr;
}

.grid-2 {
  grid-template-columns: repeat(2, 1fr);
}

.grid-3 {
  grid-template-columns: repeat(3, 1fr);
}

.image-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 16rpx;
  overflow: hidden;
}

.diary-image {
  width: 100%;
  height: 100%;
}

.image-more {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 32rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 192rpx 64rpx;
}

.empty-icon {
  width: 192rpx;
  height: 192rpx;
  border-radius: 96rpx;
  margin: 0 auto 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty-text {
  font-size: 28rpx;
}

/* 返回顶部 */
.back-to-top {
  position: fixed;
  right: 48rpx;
  bottom: 192rpx;
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  z-index: 20;
  transition: all 0.2s;
}

.back-to-top:active {
  transform: scale(0.9);
}

/* 加载中 */
.loading {
  text-align: center;
  padding: 32rpx;
  font-size: 28rpx;
}
