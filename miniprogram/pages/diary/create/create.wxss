/* pages/diary/create/create.wxss */

.container {
  min-height: 100vh;
  padding-bottom: 32rpx;
}

/* 头部 */
.header {
  position: sticky;
  top: 0;
  z-index: 10;
  backdrop-filter: blur(20rpx);
  padding: 32rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header-left {
  width: 96rpx;
}

.back-icon {
  font-size: 64rpx;
  line-height: 1;
  cursor: pointer;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
}

.header-right {
  width: 96rpx;
  display: flex;
  justify-content: flex-end;
}

.save-btn {
  padding: 16rpx 32rpx;
  border-radius: 48rpx;
  font-size: 28rpx;
  transition: all 0.2s;
}

.save-btn.disabled {
  opacity: 0.5;
}

.save-btn:active:not(.disabled) {
  transform: scale(0.95);
}

/* 内容区域 */
.content {
  padding: 32rpx;
}

/* 标题输入 */
.title-section {
  margin-bottom: 32rpx;
}

.title-input {
  width: 100%;
  font-size: 48rpx;
  font-weight: bold;
  line-height: 1.4;
}

/* 日期 */
.date-section {
  margin-bottom: 48rpx;
  font-size: 28rpx;
}

/* 图片上传 */
.image-section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.drag-hint {
  font-size: 24rpx;
  font-weight: 400;
}

.image-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

.image-item {
  position: relative;
  aspect-ratio: 1;
  border-radius: 16rpx;
  overflow: hidden;
  transition: transform 0.2s, box-shadow 0.2s, opacity 0.2s;
}

/* 拖拽中的图片项 */
.image-item.dragging {
  transform: scale(1.05);
  opacity: 0.8;
  z-index: 10;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
}

/* 拖拽目标区域 */
.image-item.drag-over {
  transform: scale(0.95);
  opacity: 0.6;
}

.uploaded-image {
  width: 100%;
  height: 100%;
}

.image-remove {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FFFFFF;
  font-size: 32rpx;
  z-index: 5;
  transition: background 0.2s;
}

.image-remove:active {
  background: rgba(0, 0, 0, 0.8);
}

/* 拖拽指示器 */
.drag-indicator {
  position: absolute;
  bottom: 8rpx;
  right: 8rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 8rpx;
  padding: 8rpx;
  backdrop-filter: blur(10rpx);
}

.drag-dots {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 4rpx;
}

.drag-dots .dot {
  width: 4rpx;
  height: 4rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
}

.image-upload {
  aspect-ratio: 1;
  border: 2rpx dashed;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  transition: all 0.2s;
}

.image-upload:active {
  transform: scale(0.95);
}

.upload-icon {
  font-size: 64rpx;
}

.upload-text {
  font-size: 24rpx;
}

/* 内容输入 */
.content-section {
  margin-bottom: 32rpx;
}

.content-textarea {
  width: 100%;
  min-height: 400rpx;
  font-size: 32rpx;
  line-height: 1.6;
}

.word-count {
  text-align: right;
  font-size: 24rpx;
  margin-top: 16rpx;
}

/* AI润色 */
.ai-polish {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  padding: 24rpx 48rpx;
  border-radius: 48rpx;
  margin-bottom: 48rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.2s;
}

.ai-polish:active:not(.disabled) {
  transform: scale(0.98);
}

.ai-polish.disabled {
  opacity: 0.5;
}

.ai-icon {
  font-size: 32rpx;
}

/* 标签选择 */
.tags-section {
  margin-bottom: 48rpx;
}

.tag-category {
  margin-bottom: 32rpx;
}

.category-title {
  font-size: 24rpx;
  margin-bottom: 16rpx;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  padding: 16rpx 32rpx;
  border-radius: 48rpx;
  font-size: 28rpx;
  border: 2rpx solid;
  transition: all 0.2s;
}

.tag-item:active {
  transform: scale(0.95);
}

/* 草稿提示 */
.draft-tip {
  text-align: center;
  font-size: 24rpx;
  padding: 32rpx;
}
