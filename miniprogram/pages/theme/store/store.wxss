/* pages/theme/store/store.wxss */

.container {
  min-height: 100vh;
  padding-top: 156rpx;
  padding-bottom: 32rpx;
}

/* ========== 固定头部 ========== */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  padding: 44rpx 32rpx 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  letter-spacing: 1rpx;
}

.header-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex-wrap: wrap;
  font-size: 26rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
  padding: 10rpx 18rpx;
  border-radius: 24rpx;
  background: rgba(255, 255, 255, 0.65);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.info-icon {
  font-size: 36rpx;
  line-height: 1;
}

/* ========== 当前主题预览卡片（扩大显示）========== */
.current-theme-section {
  padding: 32rpx;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  padding-left: 8rpx;
}

.current-theme-card {
  padding: 48rpx 40rpx;
  border-radius: 32rpx;
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.12);
  position: relative;
  overflow: hidden;
  min-height: 280rpx;
}

.current-theme-card::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  transform: translate(50%, -50%);
}

.theme-name {
  font-size: 44rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
  letter-spacing: 1rpx;
  position: relative;
  z-index: 1;
}

.color-preview {
  display: flex;
  gap: 20rpx;
  margin-bottom: 32rpx;
  position: relative;
  z-index: 1;
}

.color-dot {
  width: 72rpx;
  height: 72rpx;
  border-radius: 36rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  border: 4rpx solid rgba(255, 255, 255, 0.9);
  transition: transform 0.2s;
}

.color-dot:active {
  transform: scale(0.9);
}

.active-badge {
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
  padding: 14rpx 28rpx;
  border-radius: 48rpx;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 1;
}

/* ========== 主题分组 ========== */
.theme-group {
  padding: 32rpx;
  margin-bottom: 8rpx;
}

.group-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 28rpx;
}

.group-title {
  font-size: 34rpx;
  font-weight: 600;
}

.group-badge {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 20rpx;
  border-radius: 28rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.badge-icon {
  font-size: 32rpx;
  line-height: 1;
}

/* ========== 主题网格卡片 ========== */
.theme-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 28rpx;
}

.theme-card {
  border-radius: 28rpx;
  overflow: hidden;
  transition: all 0.3s;
  position: relative;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  min-height: 240rpx;
}

.theme-card:active {
  transform: scale(0.96);
}

.theme-card .color-preview {
  padding: 28rpx 28rpx 0;
  margin-bottom: 20rpx;
}

.color-dot-small {
  width: 52rpx;
  height: 52rpx;
  border-radius: 26rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
  border: 3rpx solid rgba(255, 255, 255, 0.8);
}

.card-theme-name {
  padding: 0 28rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.status-badge {
  margin: 0 28rpx 28rpx;
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 10rpx 20rpx;
  border-radius: 28rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.lock-overlay {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.25);
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(4rpx);
}

.lock-icon {
  font-size: 72rpx;
  opacity: 0.9;
  filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.3));
}

/* ========== 返回顶部按钮 ========== */
.back-to-top {
  position: fixed;
  right: 48rpx;
  bottom: 192rpx;
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.18);
  z-index: 50;
  transition: all 0.3s;
}

.back-to-top:active {
  transform: scale(0.88);
}

.back-icon {
  font-size: 52rpx;
  color: #FFFFFF;
  font-weight: bold;
}

/* ========== 预览弹窗 ========== */
.preview-overlay {
  position: fixed;
  inset: 0;
  z-index: 200;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.preview-mask {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.55);
}

.preview-modal {
  position: relative;
  width: 100%;
  max-height: 80vh;
  border-radius: 48rpx 48rpx 0 0;
  overflow: hidden;
  animation: slide-up 0.35s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  box-shadow: 0 -8rpx 40rpx rgba(0, 0, 0, 0.25);
  display: flex;
  flex-direction: column;
}

@keyframes slide-up {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-handle {
  position: relative;
  z-index: 10;
  display: flex;
  justify-content: center;
  padding-top: 32rpx;
  padding-bottom: 16rpx;
  flex-shrink: 0;
}

.handle-bar {
  width: 96rpx;
  height: 8rpx;
  border-radius: 4rpx;
  opacity: 0.4;
}

.modal-content {
  flex: 1;
  overflow-y: auto;
  padding: 0 48rpx 0;
}

.modal-title {
  font-size: 52rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  letter-spacing: 1rpx;
}

.modal-type-badge {
  margin-bottom: 48rpx;
}

.type-tag {
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
  padding: 14rpx 28rpx;
  border-radius: 48rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.tag-icon {
  font-size: 32rpx;
  line-height: 1;
}

/* ========== 模态框内容区域 ========== */
.modal-section {
  margin-bottom: 48rpx;
}

.modal-section-title {
  font-size: 28rpx;
  margin-bottom: 24rpx;
  font-weight: 500;
}

.color-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 28rpx;
}

.color-item {
  text-align: center;
}

.color-square {
  width: 100%;
  aspect-ratio: 1;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.12);
}

.color-label {
  font-size: 24rpx;
  opacity: 0.7;
}

/* ========== 效果预览 ========== */
.preview-example {
  padding: 36rpx;
  border-radius: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.example-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 28rpx;
}

.example-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.12);
}

.example-text {
  flex: 1;
}

.example-title {
  font-size: 30rpx;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.example-subtitle {
  font-size: 24rpx;
}

.example-button {
  padding: 24rpx;
  border-radius: 20rpx;
  text-align: center;
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

/* ========== 固定在底部的操作按钮 ========== */
.modal-actions {
  position: relative;
  z-index: 20;
  flex-shrink: 0;
  padding: 20rpx 48rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.action-button {
  width: 100%;
  padding: 24rpx;
  border-radius: 28rpx;
  text-align: center;
  color: #FFFFFF;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.action-button::after {
  border: none;
}

.action-button:active {
  transform: scale(0.96);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.action-button.secondary {
  opacity: 0.9;
}
