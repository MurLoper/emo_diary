/* pages/user/user.wxss */

.container {
  min-height: 100vh;
  padding-top: 212rpx;
}

/* ========== 固定头部 ========== */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  padding: 44rpx 48rpx 0;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 24rpx;
  letter-spacing: 1rpx;
}

/* ========== 标签页 ========== */
.tabs {
  display: flex;
  border-bottom: 1rpx solid;
  margin: 0 -48rpx;
  padding: 0 48rpx;
}

.tab-item {
  flex: 1;
  padding: 20rpx 0;
  text-align: center;
  position: relative;
  transition: color 0.2s;
  font-size: 28rpx;
}

.tab-indicator {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  border-radius: 2rpx;
}

/* ========== 内容区域 ========== */
.content {
  min-height: calc(100vh - 212rpx);
}

/* ========== 个人资料 ========== */
.profile-section {
  padding: 48rpx;
}

.user-card {
  padding: 48rpx;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.user-info {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.avatar-wrapper {
  position: relative;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
}

.level-badge {
  position: absolute;
  bottom: -8rpx;
  right: -8rpx;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  color: #FFFFFF;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.user-join {
  font-size: 28rpx;
}

.edit-button {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s;
}

.edit-button:active {
  transform: scale(0.9);
}

.edit-button .icon {
  font-size: 40rpx;
}

/* ========== 菜单 ========== */
.menu-section {
  padding: 32rpx 48rpx;
}

.section-title {
  font-size: 28rpx;
  margin-bottom: 24rpx;
}

.menu-card {
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.06);
}

.menu-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 32rpx;
  transition: background 0.2s;
}

.menu-item:active {
  background: rgba(0, 0, 0, 0.05);
}

.menu-icon {
  font-size: 40rpx;
}

.menu-label {
  flex: 1;
  font-size: 32rpx;
}

.menu-extra {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.hot-badge {
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  font-size: 20rpx;
}

.menu-value {
  font-size: 28rpx;
}

.arrow {
  font-size: 48rpx;
  line-height: 1;
}

.divider {
  height: 1rpx;
  margin: 0 32rpx;
}

/* ========== 退出登录 ========== */
.logout-section {
  padding: 32rpx 48rpx;
}

.logout-button {
  width: 100%;
  padding: 24rpx;
  border-radius: 24rpx;
  text-align: center;
  font-size: 32rpx;
  border: none;
  transition: opacity 0.2s;
}

.logout-button::after {
  border: none;
}

.logout-button:active {
  opacity: 0.8;
}

/* ========== 版本信息 ========== */
.version-info {
  text-align: center;
  padding: 32rpx 48rpx 96rpx;
  font-size: 28rpx;
}
