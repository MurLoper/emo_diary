/* pages/album/preview/preview.wxss */

.container {
  min-height: 100vh;
  padding-top: 132rpx;
  padding-bottom: 160rpx;
}

/* ========== 固定头部 ========== */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  padding: 44rpx 48rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.back-btn {
  position: absolute;
  left: -16rpx;
  padding: 8rpx 16rpx;
  font-size: 48rpx;
  line-height: 1;
}

.icon-back {
  font-size: 48rpx;
}

.header-title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
}

.share-btn {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 32rpx;
  transition: transform 0.2s;
}

.share-btn:active {
  transform: scale(0.9);
}

/* ========== 加载状态 ========== */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 48rpx;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 32rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
}

/* ========== 内容区域 ========== */
.content {
  min-height: calc(100vh - 132rpx - 160rpx);
}

/* ========== 图文集信息 ========== */
.album-info {
  margin: 32rpx 48rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.06);
}

.album-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.template-badge {
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
}

.diary-count {
  font-size: 28rpx;
}

.album-description {
  display: block;
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.album-date {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
}

/* ========== 日记容器 ========== */
.diaries-container {
  padding: 0 48rpx 32rpx;
}

/* ========== 经典网格模板 ========== */
.template-classic {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.diary-item-classic {
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s;
}

.diary-item-classic:active {
  transform: scale(0.98);
}

.diary-image {
  width: 100%;
  height: 300rpx;
}

.diary-content {
  padding: 24rpx;
}

.diary-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.diary-excerpt {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 26rpx;
  line-height: 1.6;
  margin-bottom: 12rpx;
}

.diary-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.tag {
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
}

/* ========== 杂志风格模板 ========== */
.template-magazine {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.diary-item-magazine {
  position: relative;
  height: 480rpx;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.12);
  transition: transform 0.2s;
}

.diary-item-magazine:active {
  transform: scale(0.98);
}

.magazine-cover {
  width: 100%;
  height: 100%;
}

.magazine-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7), transparent 50%);
}

.magazine-content {
  position: absolute;
  bottom: 48rpx;
  left: 48rpx;
  right: 48rpx;
}

.magazine-title {
  display: block;
  color: white;
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.magazine-date {
  font-size: 28rpx;
}

/* ========== 时间线模板 ========== */
.template-timeline {
  position: relative;
  padding-left: 80rpx;
}

.template-timeline::before {
  content: '';
  position: absolute;
  left: 32rpx;
  top: 0;
  bottom: 0;
  width: 4rpx;
  background: linear-gradient(to bottom, var(--theme-primary, #FFB6C1), transparent);
}

.timeline-item {
  position: relative;
  margin-bottom: 48rpx;
}

.timeline-dot {
  position: absolute;
  left: -56rpx;
  top: 8rpx;
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 0 0 4rpx rgba(0, 0, 0, 0.06);
}

.timeline-content {
  padding: 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.06);
  transition: transform 0.2s;
}

.timeline-content:active {
  transform: scale(0.98);
}

.timeline-date {
  display: block;
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.timeline-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.timeline-excerpt {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.timeline-images {
  display: flex;
  gap: 12rpx;
}

.timeline-image {
  flex: 1;
  height: 200rpx;
  border-radius: 16rpx;
}

/* ========== 极简主义模板 ========== */
.template-minimal {
  display: flex;
  flex-direction: column;
  gap: 96rpx;
}

.diary-item-minimal {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  transition: transform 0.2s;
}

.diary-item-minimal:active {
  transform: scale(0.98);
}

.minimal-date {
  font-size: 24rpx;
  text-transform: uppercase;
  letter-spacing: 2rpx;
}

.minimal-title {
  font-size: 48rpx;
  font-weight: bold;
  line-height: 1.3;
}

.minimal-content {
  font-size: 28rpx;
  line-height: 1.8;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
}

.minimal-image {
  width: 100%;
  height: 400rpx;
  border-radius: 24rpx;
  margin-top: 16rpx;
}

/* ========== 拼贴画册模板 ========== */
.template-collage {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.collage-item {
  border-radius: 24rpx;
  overflow: hidden;
  padding: 16rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s;
}

.collage-item:active {
  transform: scale(0.98);
}

.collage-images {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.collage-image {
  width: 100%;
  height: 160rpx;
  border-radius: 12rpx;
}

.collage-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* ========== 宝丽来相册模板 ========== */
.template-polaroid {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.polaroid-item {
  padding: 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
  transform: rotate(-1deg);
  transition: transform 0.2s;
}

.polaroid-item:nth-child(even) {
  transform: rotate(1deg);
}

.polaroid-item:active {
  transform: rotate(0deg) scale(0.98);
}

.polaroid-frame {
  background: #FFFFFF;
}

.polaroid-image {
  width: 100%;
  height: 400rpx;
  border-radius: 8rpx 8rpx 0 0;
}

.polaroid-caption {
  padding: 24rpx;
  background: #FFFFFF;
  border-radius: 0 0 8rpx 8rpx;
}

.polaroid-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  text-align: center;
}

.polaroid-date {
  display: block;
  font-size: 24rpx;
  text-align: center;
}

/* ========== 底部占位 ========== */
.bottom-placeholder {
  height: 32rpx;
}

/* ========== 底部操作栏 ========== */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 48rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  backdrop-filter: blur(20rpx);
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.06);
  display: flex;
  gap: 24rpx;
}

.action-btn {
  flex: 1;
  padding: 24rpx;
  border-radius: 24rpx;
  font-size: 32rpx;
  text-align: center;
  transition: opacity 0.2s;
  border: none;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  opacity: 0.8;
}

.action-btn.secondary {
  border: 2rpx solid;
  background: transparent;
}

.action-btn.primary {
  color: #FFFFFF;
}
