/* pages/album/list/list.wxss */

.container {
  min-height: 100vh;
  padding-top: 224rpx;
}

/* ========== 固定头部 ========== */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  padding: 44rpx 48rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  letter-spacing: 1rpx;
}

.create-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: transform 0.2s;
}

.create-btn:active {
  transform: scale(0.9);
}

.create-btn .icon {
  font-size: 40rpx;
  color: #FFFFFF;
  font-weight: bold;
}

.header-subtitle {
  font-size: 26rpx;
}

/* ========== 内容区域 ========== */
.content {
  min-height: calc(100vh - 224rpx);
}

.albums-list {
  padding: 32rpx 48rpx;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

/* ���aG */
.album-card {
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.2s;
}

.album-card:active {
  transform: scale(0.98);
}

.album-cover {
  position: relative;
  height: 384rpx;
}

.cover-image {
  width: 100%;
  height: 100%;
}

.cover-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
}

.cover-info {
  position: absolute;
  bottom: 32rpx;
  left: 32rpx;
  right: 32rpx;
}

.album-title {
  color: white;
  font-size: 40rpx;
  display: block;
  margin-bottom: 8rpx;
}

.album-meta {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}

.meta-icon {
  font-size: 28rpx;
}

.meta-text {
  font-size: 28rpx;
}

.album-info {
  padding: 32rpx;
}

.album-desc {
  font-size: 28rpx;
  margin-bottom: 24rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.album-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.album-tags {
  display: flex;
  gap: 16rpx;
}

.tag {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  gap: 4rpx;
}

.tag-icon {
  font-size: 20rpx;
}

.tag-text {
  font-size: 24rpx;
}

.album-count {
  font-size: 28rpx;
}

/* z� */
.empty-state {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 48rpx;
  text-align: center;
}

.empty-icon {
  width: 192rpx;
  height: 192rpx;
  border-radius: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.icon-text {
  font-size: 80rpx;
}

.empty-title {
  font-size: 36rpx;
  margin-bottom: 16rpx;
  display: block;
}

.empty-desc {
  font-size: 28rpx;
  margin-bottom: 48rpx;
  display: block;
}

.template-preview {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  width: 100%;
  margin-bottom: 48rpx;
}

.template-card {
  padding: 32rpx;
  border-radius: 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
}

.template-emoji {
  font-size: 64rpx;
  display: block;
  margin-bottom: 16rpx;
}

.template-name {
  font-size: 28rpx;
  display: block;
}

.start-btn {
  padding: 24rpx 64rpx;
  border-radius: 48rpx;
  color: #FFFFFF;
  font-size: 32rpx;
}
