/* pages/album/create/create.wxss */

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* 头部 */
.header {
  flex-shrink: 0;
  padding: 96rpx 48rpx 32rpx;
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
}

.back-btn {
  padding: 8rpx 16rpx;
  font-size: 48rpx;
  line-height: 1;
}

.icon-back {
  font-size: 48rpx;
}

.header-title {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  font-size: 40rpx;
  font-weight: bold;
}

.create-btn {
  padding: 16rpx 32rpx;
  border-radius: 16rpx;
  color: #FFFFFF;
  font-size: 28rpx;
  border: none;
  transition: opacity 0.2s;
}

.create-btn.disabled {
  opacity: 0.5;
}

.create-btn::after {
  border: none;
}

/* 内容区域 */
.content {
  flex: 1;
  overflow-y: auto;
}

/* 区块 */
.section {
  padding: 32rpx 48rpx;
}

.section-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.diary-count {
  font-size: 28rpx;
}

/* 表单项 */
.form-item {
  margin-bottom: 32rpx;
}

.form-label {
  display: block;
  font-size: 32rpx;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  padding: 24rpx;
  border-radius: 24rpx;
  border: 2rpx solid;
  font-size: 28rpx;
}

.form-textarea {
  width: 100%;
  padding: 24rpx;
  border-radius: 24rpx;
  border: 2rpx solid;
  font-size: 28rpx;
  min-height: 192rpx;
}

/* 模板网格 */
.templates-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.template-card {
  position: relative;
  border-radius: 24rpx;
  overflow: hidden;
  border: 4rpx solid;
  transition: all 0.2s;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.template-card.selected {
  transform: scale(1.02);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
}

.template-preview {
  width: 100%;
  aspect-ratio: 16/9;
}

.template-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent);
  pointer-events: none;
}

.template-check {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.check-icon {
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: bold;
}

.template-info {
  position: absolute;
  bottom: 16rpx;
  left: 16rpx;
  right: 16rpx;
  pointer-events: none;
}

.template-name {
  color: #FFFFFF;
  font-size: 28rpx;
  font-weight: bold;
}

.template-details {
  padding: 24rpx;
}

.template-desc {
  display: block;
  font-size: 24rpx;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.template-features {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 16rpx;
}

.feature-tag {
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
}

.template-suggest {
  display: block;
  font-size: 20rpx;
  line-height: 1.4;
}

/* 日记列表 */
.diaries-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.diary-item {
  padding: 24rpx;
  border-radius: 24rpx;
  border: 4rpx solid;
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
  transition: all 0.2s;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
}

.diary-item.selected {
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.diary-checkbox {
  width: 40rpx;
  height: 40rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 4rpx;
}

.diary-image {
  width: 128rpx;
  height: 128rpx;
  border-radius: 16rpx;
  flex-shrink: 0;
}

.diary-info {
  flex: 1;
  min-width: 0;
}

.diary-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.diary-content {
  display: block;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 1.5;
}

.diary-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.diary-tag {
  font-size: 20rpx;
  padding: 6rpx 12rpx;
  border-radius: 999rpx;
}

/* AI提示 */
.ai-tip {
  padding: 24rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
}

.ai-icon {
  font-size: 40rpx;
}

.ai-tip-content {
  flex: 1;
}

.ai-tip-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.ai-tip-desc {
  display: block;
  font-size: 24rpx;
  line-height: 1.5;
}

/* 底部占位 */
.bottom-placeholder {
  height: 48rpx;
}
