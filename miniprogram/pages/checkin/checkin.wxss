/* pages/checkin/checkin.wxss */

.container {
  min-height: 100vh;
  padding-top: 188rpx;
}

/* ========== 固定头部 ========== */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  backdrop-filter: blur(20rpx);
  -webkit-backdrop-filter: blur(20rpx);
  padding: 44rpx 48rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.header-content {
  display: flex;
  align-items: flex-start;
  gap: 20rpx;
}

.back-button {
  padding: 8rpx 0;
  margin-left: -8rpx;
  transition: transform 0.2s;
}

.back-button:active {
  transform: scale(0.9);
}

.back-icon {
  font-size: 56rpx;
  line-height: 1;
  font-weight: bold;
}

.header-text {
  flex: 1;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  letter-spacing: 1rpx;
}

.header-subtitle {
  font-size: 26rpx;
}

/* ========== 内容区域 ========== */
.content {
  min-height: calc(100vh - 188rpx);
}

/* ~0aG */
.checkin-section {
  padding: 48rpx;
}

.checkin-card {
  padding: 48rpx;
  border-radius: 32rpx;
}

.checkin-stats {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 48rpx;
}

.stats-left {
  flex: 1;
}

.continuous-days {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.trend-icon {
  font-size: 48rpx;
}

.days-number {
  font-size: 72rpx;
  font-weight: bold;
}

.stats-label {
  font-size: 28rpx;
}

.checkin-button {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 24rpx 48rpx;
  border-radius: 24rpx;
  color: #FFFFFF;
  font-size: 32rpx;
  border: none;
  transition: all 0.2s;
}

.checkin-button::after {
  border: none;
}

.checkin-button:active:not(.checked) {
  transform: scale(0.95);
}

.checkin-button.checked {
  opacity: 0.5;
}

.button-icon {
  font-size: 40rpx;
}

/* ��V� */
.daily-reward {
  padding: 32rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.reward-amount {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.reward-icon {
  font-size: 32rpx;
}

/* V��: */
.reward-toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 100;
  padding: 32rpx 48rpx;
  border-radius: 24rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.2);
  display: flex;
  align-items: center;
  gap: 16rpx;
  animation: bounce 0.6s ease-in-out infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
  }
  50% {
    transform: translate(-50%, -50%) scale(1.1);
  }
}

.toast-icon {
  font-size: 48rpx;
}

.toast-text {
  font-size: 36rpx;
  color: #FFFFFF;
}

/* ~0� */
.calendar-section {
  padding: 32rpx 48rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 24rpx;
}

.calendar-card {
  padding: 32rpx;
  border-radius: 32rpx;
}

.calendar-weekdays {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.weekday-label {
  text-align: center;
  font-size: 28rpx;
  padding: 16rpx 0;
}

.calendar-days {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 16rpx;
}

.day-cell {
  aspect-ratio: 1;
}

.day-content {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  position: relative;
}

.day-number {
  line-height: 1;
}

.check-dot {
  position: absolute;
  bottom: 8rpx;
  width: 8rpx;
  height: 8rpx;
  border-radius: 4rpx;
}

/* ��~0V� */
.rewards-section {
  padding: 32rpx 48rpx;
}

.rewards-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.reward-item {
  padding: 32rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.reward-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
  flex: 1;
}

.reward-icon-wrapper {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.gift-icon {
  font-size: 48rpx;
}

.reward-text {
  flex: 1;
}

.reward-label {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.reward-detail {
  font-size: 28rpx;
}

.reward-check {
  width: 64rpx;
  height: 64rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.check-icon {
  font-size: 32rpx;
  color: #FFFFFF;
}

/* ~0� */
.rules-section {
  padding: 32rpx 48rpx 96rpx;
}

.rules-card {
  padding: 32rpx;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  font-size: 28rpx;
}

.rule-item {
  line-height: 1.6;
}
