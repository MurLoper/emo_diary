/* pages/recharge/recharge.wxss */

.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

/* 头部 */
.header {
  flex-shrink: 0;
  padding: 96rpx 48rpx 48rpx;
}

.header-content {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  position: relative;
}

.back-btn {
  position: absolute;
  left: -16rpx;
  padding: 8rpx 16rpx;
  font-size: 48rpx;
  line-height: 1;
}

.icon-back {
  font-size: 48rpx;
}

.header-title {
  flex: 1;
  text-align: center;
  font-size: 48rpx;
  font-weight: bold;
}

.header-subtitle {
  font-size: 28rpx;
  text-align: center;
}

/* 内容区域 */
.content {
  flex: 1;
  overflow-y: auto;
  padding-bottom: 160rpx;
}

/* 余额卡片 */
.balance-card {
  margin: 32rpx 48rpx;
  padding: 48rpx;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.balance-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.balance-label {
  font-size: 28rpx;
}

.coin-icon-wrapper {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.coin-icon {
  font-size: 32rpx;
}

.coin-label {
  font-size: 28rpx;
}

.balance-amount {
  font-size: 80rpx;
  font-weight: bold;
}

/* 区块标题 */
.section {
  padding: 32rpx 48rpx;
}

.section-title {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
}

/* 充值套餐网格 */
.packages-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.package-card {
  position: relative;
  padding: 32rpx;
  border-radius: 32rpx;
  border: 4rpx solid;
  transition: all 0.2s;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.06);
}

.package-card.selected {
  transform: scale(1.02);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.12);
}

/* 套餐标签 */
.package-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  font-size: 20rpx;
  color: #FFFFFF;
  z-index: 1;
}

.badge-text {
  font-size: 20rpx;
  color: #FFFFFF;
}

/* 选中标记 */
.package-check {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.check-icon {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: bold;
}

/* 套餐图标 */
.package-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.icon-text {
  font-size: 48rpx;
}

/* 套餐标签 */
.package-label {
  display: block;
  font-size: 28rpx;
  margin-bottom: 16rpx;
}

/* 心晴币数量 */
.package-coins {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
  margin-bottom: 8rpx;
}

.coins-amount {
  font-size: 48rpx;
  font-weight: bold;
}

.coins-bonus {
  font-size: 28rpx;
}

.coins-unit {
  font-size: 28rpx;
}

/* 价格 */
.package-price {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

/* 赠送提示 */
.package-bonus-tip {
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  text-align: center;
}

.bonus-text {
  font-size: 20rpx;
}

/* 温馨提示 */
.tips-section {
  padding: 32rpx 48rpx;
}

.tips-card {
  padding: 32rpx;
  border-radius: 24rpx;
}

.tips-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.tips-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tip-item {
  font-size: 28rpx;
  line-height: 1.6;
}

/* 支付方式 */
.payment-method {
  padding: 32rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.payment-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.payment-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.payment-icon.wechat {
  background: #09BB07;
}

.payment-icon-text {
  color: #FFFFFF;
  font-size: 24rpx;
}

.payment-name {
  font-size: 32rpx;
}

.payment-radio {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 4rpx solid;
  display: flex;
  align-items: center;
  justify-content: center;
}

.radio-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #FFFFFF;
}

/* 底部占位 */
.bottom-placeholder {
  height: 160rpx;
}

/* 底部购买按钮 */
.purchase-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx 48rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(20rpx);
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.purchase-btn {
  width: 100%;
  padding: 32rpx;
  border-radius: 24rpx;
  color: #FFFFFF;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  transition: opacity 0.2s;
  border: none;
}

.purchase-btn.disabled {
  opacity: 0.5;
}

.purchase-btn::after {
  border: none;
}

.purchase-icon {
  font-size: 40rpx;
}

.purchase-text {
  font-size: 32rpx;
  color: #FFFFFF;
}
